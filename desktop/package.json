{
  "name": "ai-professor-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --config vite.renderer.config.ts",
    "electron": "tsc -p tsconfig.electron.json && electron . --no-sandbox",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "npm run build && electron .",
    "package:mac": "npm run build && electron-packager . 'AI Professor' --platform=darwin --arch=arm64 --out=release --overwrite --app-bundle-id=com.aiprofessor.desktop && xattr -cr 'release/AI Professor-darwin-arm64/AI Professor.app'"
  },
  "dependencies": {
    "pdfjs-dist": "^5.4.296",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "electron": "^30.0.0",
    "electron-packager": "^17.1.2",
    "sharp": "^0.34.4",
    "svg2img": "^1.0.0-beta.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  },
  "electronPackager": {
    "ignore": [
      "^/src",
      "^/node_modules",
      "^\\.git",
      "^/release",
      "\\.ts$",
      "\\.md$"
    ]
  }
}
